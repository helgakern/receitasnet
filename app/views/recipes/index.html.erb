<h1><%= pluralize(@recipes.size, "Receita", "Receitas") %></h1>
<% @recipes.each do |recipe| %>
 <article>
  <header>
    <h2><%= recipe.name  %></h2>
  </header>
    <p>
    <li><%= truncate(recipe.stuff, length:15, separator: ' ' )%></li>
    </p>
    <p>
    <li><%= formata_caloria(recipe) %></li>
    </p>
    <table>
     <tr>
      <th>Modo de preparo:</th>
      <td><%= recipe.prepare_mode %></td>
     </tr>
      <th>Custo do prato:</th>
      <td><%= number_to_currency(recipe.cost) %></td>
     </tr>
    </table>
 </article>
<% end %>    
